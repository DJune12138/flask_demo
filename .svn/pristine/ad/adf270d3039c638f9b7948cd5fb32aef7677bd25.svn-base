    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAVElEQVQYlX3OSw3AMAwD0EIYlEEYhEIpi8i+BGohdLepH3uRfLGe5JSyHYAGoO39gUgOksPiGVmskMSZef3lgxHxuJC8F2imO4C6/CnwiQT2aMYKvbNDemptkiToAAAAAElFTkSuQmCC');
}

.fixed-table-container thead th .asc {
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAICAYAAADED76LAAAAW0lEQVQYlX3OQQ3CQBQE0Jfs7B0JlVQJlbAOKgEJSKmkSvhcCKGlMMmc3hyGY27+Jazh/sunsIfC9KWNR6hXtzPOH1ihGvP7WNjOg7CDzrjACtUZGktnXLWxPAHvKxvMFYl9IwAAAABJRU5ErkJggg==');
