.fixed-table-container thead th .desc {
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAgAAAAICAYAAADED76LAAAAVUlEQVQYlX3OQQ2AMBAF0Zd0uSMJCUioBBwgoVIqCQlIgEshhBQm+aeZbFYi/2w2sATHx1aQ2N4ysWEEwdQJsidBfQRVh7HJPZh6gaAEpSuvK/djjRMSbxuiNDcZqQAAAABJRU5ErkJggg==');
