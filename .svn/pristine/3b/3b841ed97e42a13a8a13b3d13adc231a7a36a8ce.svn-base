    {#                    $(this).attr('class','')#}
    {#                }#}
    {#            })#}
    {#        }#}
    {#    })#}
    {# });#}

    {#// 清空所有活动奖励输入框#}
    {#function clear_award_input () {#}
    {#    $('#award').find('input').each(function(){#}
    {#        $(this).val('')#}
    {#    })#}
    {# }#}

    {#// 构造修改页面活动奖励的数量#}
    {#function award_quantity (activity_award) {#}
    {#    for(var key in activity_award) {#}
    {#        $('#'+key).val(activity_award[key])#}
    {#    }#}
    {# }#}

    // 活动类型改变事件
    $('#activity_type').change(function () {
        if ($(this).val()==2) {
            $('#hid_fee').show()
        }
        else {
            $('#hid_fee').hide()
        }
    });

    $(function () {
        $('#reportTable').bootstrapTable({
            striped: true,
            pagination: true,
            contentType: "application/x-www-form-urlencoded",
            paginationPreText:'上一页',
            paginationNextText:'下一页',
            showPaginationSwitch:false,  //是否显示数据条数选择框
            pageSize: 100,
            pageNumber:1,
            pageList: [10, 20, 50, 100, 200, 500],
            sidePagination:'client',
            showColumns: false,
            showRefresh: false,
            showHeader:true,
            showToolbar:false,
            buttonsAlign:"right",
            exportTypes: ["excel"],
            exportDataType: "all",
            clickToSelect: true,
            columns:
            [
                {#{field:"checked",checkbox:true},#}
                {field:"priority",title:"优先级",align:"center",sortable:true},
                {field:"activity_id",title:"活动ID",align:"center",valign:"middle"},
                {field:"user_id",title:"后台账号",align:"center",valign:"middle"},
                {field:"activity_content",title:"活动规则描述",align:"center",valign:"middle"},
                {field:"activity_type",title:"活动类型",align:"center",valign:"middle"},
                {field:"entry_fee",title:"报名费",align:"center",valign:"middle"},
                {#{field:"activity_award",title:"活动奖励",align:"center",valign:"middle"},#}
                {field:"begin_time",title:"开始时间",align:"center",valign:"middle"},
                {field:"end_time",title:"结束时间",align:"center",valign:"middle"},
                {field:"status",title:"状态",align:"center",valign:"middle"},
                {field:"operate",title:"操作",align:"center",valign:"middle"}
            ],
            data:[
                {% for data in datas %}
                    {
                        priority:{{ data.priority }},
                        activity_id:'{{ data.activity_id }}',
                        user_id:'{{ data.user_id }}',
                        activity_content:'{{ data.activity_content | safe }}',
                        activity_type:'{{ data.activity_type }}',
                        entry_fee:'{{ data.entry_fee }}',
                        {#activity_award:'{{ data.activity_award }}',#}
                        begin_time:'{{ data.begin_time }}',
                        end_time:'{{ data.end_time }}',
                        status:'{% if data.status_num==0 %}<span style="color: red">{{ data.status }}</span>{% else %}<span style="color: limegreen">{{ data.status }}</span>{% endif %}',
                        operate:'<a class="update_mail" activity_id="{{ data.activity_id }}">修改</a>'
                    },
                {% endfor %}
            ]
        });

        // 构造修改活动页面
        $('.update_mail').click(function() {
            go_new.text('返回邮件列表');
            $('#batch_cancel').hide();
            $.ajax({
                url: '{{ url_for("busi.update_activity_json") }}',
                type: 'GET',
                dataType: 'json',
                data: {
                    'activity_id': $(this).attr('activity_id')
                },
                success: function(data) {
                    {#ue_content.setContent(data.data.activity_content);#}
                    {#clear_award_input();  // 清空输入框#}
                    {#award_quantity(data.data.activity_award);#}
