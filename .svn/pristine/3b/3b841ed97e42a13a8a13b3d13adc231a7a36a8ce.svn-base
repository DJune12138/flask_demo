        location.href = '{{ url_for("busi.show_activity") }}'
    });

    function show_query() {
        $("#query-page").css("background-color","#FFE4B5");
        $("#add-page").css("background-color","#DDDDDD");
        $('#activity_form').hide();
        $('#reportTableDiv').show()
    }

    function show_add() {
        $("#add-page").css("background-color","#FFE4B5");
        $("#query-page").css("background-color","#DDDDDD");
        $('#reportTableDiv').hide();
        $('#activity_form').show();
    }

