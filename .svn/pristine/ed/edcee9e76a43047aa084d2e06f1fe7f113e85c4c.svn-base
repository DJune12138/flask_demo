def pt(ID):
    if ID == '0' or ID == 0:
        return u'全部'
    elif ID == '1' or ID == 1:
        return u'Android'
    else:
        return u'IOS'


def get_topup_type(value):
    if value == '1':
        return u'网银'
    elif value == '2':
        return u'支付宝'
    elif value == '3':
        return u'微信'
    elif value == '4':
        return u'其他'
    else:
        return u'全部'


def order_status(value):
    if value == 1:
        return u'发起付费'
    elif value == 2:
        return u'付费成功'
    elif value == 3:
        return u'付费失败'
    else:
        return u'全部'