        //             async : false,
        //             type : "get",
        //             success: function(data) {
        //                 // alert(data);
        //                 obj.rows[i].cells[col-2].innerText = "123456";
        //             },
        //             error: function() {}
        //         });
        // }
    }
}

function oneplayer_protect(isTrue) {
    if(!$('.selected').length){
        parent.showAlert("请选择需要修改的对象");
        return;
    }
    var data = [];
    if(isTrue){//设置
        if(!$('#protect_val').val()){
            parent.showAlert("请输入保护值");
            return;
        }
        $('.selected').each(function (index,item) {
            data.push([Number($(item).find('td:eq(1) a').text()),coin_format_back($('#protect_val').val())])
        })
    }else{//清零
        $('.selected').each(function (index,item) {
            data.push([Number($(item).find('td:eq(1) a').text()),$(item).find('td:eq(6) span').text()*-1])
        })
    }

    $.ajax({
        type: 'POST',
        url: "/games/maniplate/oneplayer_protect",
        data: {
            detail:JSON.stringify(data),
        },
        success: function(res) {
            if(res.error == 'system_err'){
                parent.showAlert("服务器忙，请稍后再试");
                return;
            }
            if(isTrue){
                parent.showAlert("设置保护值成功",'success');
            }else{
                parent.showAlert("清零保护值成功",'success');
            }
            setTimeout(function () {
                $('#query_btn').click();
            },1000)
        },
    });
}

function do_protect() {
    var checklist = get_checked('reportTable', 1);
    if (checklist == "") {
        parent.window.showAlert("请选择需要修改的对象");
        return;
    }
    alert_view.fadeIn();
}

function get_checked(){
    var tb = document.getElementById('reportTable');    // table 的 id
    var rows = tb.rows;                           // 获取表格所有行

    var check_str = "";
    var checklist = document.getElementsByName('btSelectItem');
    for (var i = 0; i < checklist.length; i++) {
        if (checklist[i].checked) {
            var pid = rows[i + 1].cells[1].innerText;
            check_str = check_str + pid + ",";
        }
    }

    return check_str;
}

$(function () {
    $('#reportTable').bootstrapTable({
        pagination: true,
        pageSize: 100,
        paginationPreText:'上一页',
        paginationNextText:'下一页',
        columns:
        [
            {field:"checked",checkbox:true},
            {field:"pid",title:"玩家ID",sortable:"true",formatter:pid_format},
            {field:"nick",title:"昵称",align:"center",valign:"middle"},
            {field:"coin",title:"当前金币",sortable:"true"},
            {field:"total_win",title:"总输赢",align:"center",valign:"middle",formatter:coin_format},
            // {field:"total_down_coin",title:"总买分",align:"center",valign:"middle"},
            // {field:"total_up_coin",title:"总卖分",align:"center",valign:"middle"},
            // {field:"today_down_coin",title:"当日买分",align:"center",valign:"middle"},
            // {field:"today_up_coin",title:"当日卖分",align:"center",valign:"middle"},
            {field:"today_win",title:"当日输赢",align:"center",valign:"middle",formatter:coin_format},
            {field:"rest_protect",title:"剩余保护",sortable:"true",formatter:coin_format},
            {field:"protect",title:"保护值",sortable:"true",formatter:coin_format},
            {field:"protect_val",title:"保护值2",sortable:"true",visible:false},
            {field:"acc_protect",title:"累计保护值",sortable:"true",formatter:coin_format_no_color},
            {field:"agentid",title:"上级代理ID",align:"center",valign:"middle"},
            {field:"timelong",title:"总游戏时长",align:"center",valign:"middle"},
            {field:"status",title:"当前在线",align:"center",valign:"middle",formatter:subgame_format},
            {field:"ip",title:"IP地址",align:"center",valign:"middle"},
            {field:"last_protect_time",title:"最后设置时间",align:"center",valign:"middle",formatter:getLocalTime},
        ],
        data:[
        {% for item in page.datas %}
            {
                pid:{{ item[0] }},
                nick:"{{ item[1] }}",
                coin:{{ item[2] }},
                total_win:{{ item[3] }},
                total_down_coin:{{ item[4] }},
                total_up_coin:{{ item[5] }},
                today_down_coin:{{ item[6] }},
                today_up_coin:{{ item[7] }},
                today_win:{{ item[8] }},
                rest_protect:{{ item[9] }},
                protect:{{ item[10] }},
                protect_val:{{ item[10] }},
                acc_protect:{{ item[11] }},
                agentid:"{{ item[12] }}",
                timelong:{{ item[13] }},
                status:"{{ item[14] }}",
                ip:"{{ item[15] }}",
                last_protect_time:{{ item[16] }},
            },
        {% endfor %}
        ]
    });
});
</script>
</body>
</html>
